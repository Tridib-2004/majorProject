<% layout("/layouts/boilerplate.ejs")%>
<div class="row">
    <div class="col-6 offset-3">
        <h3>Sign up here</h3>
        <form method="post" action="/signup" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input name="username" placeholder="enter your username" type="text"  class="form-control" required>
                <div class="valid-feedback">
                    username Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">email</label>
                <input name="email" placeholder="enter your email" type="text"  class="form-control" required>
                
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input name="password" placeholder="enter your password" type="password"  class="form-control" required>
                
            </div>
            <br>
            <button type="submit" class="btn btn-dark btn-edit">Submit</button>

        </form>
    </div>
    </div>