<% layout("/layouts/boilerplate.ejs")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edite here</h3>
    <br><br>
    <form method="post" action="/listings/<%=list._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="title" value="<%=list.title%>" type="text" class="form-control" required>
            <div class="valid-feedback">
                title Looks good!
              </div> 
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <input name="title" value="<%=list.description%>" type="text" class="form-control" required>
            <div class="valid-feedback">
                title Looks good!
              </div> 
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image url</label>
            <input name="image"value="<%=list.image%>"  class="form-control" required>
        </div>
        <div class="mb-3 ">
            <label for="price" class="form-label">price</label>
            <input name="price" value="<%=list.price.toLocaleString("en-IN")%>." class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="location" value="<%=list.location%>" type="text" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">country</label>
            <input name="country" value="<%=list.country%>" type="text" class="form-control" required>
            
        </div>
        
        <br><br>
        <button type="submit" class="btn btn-dark btn-edit">Submit</button>
    </form>
</div>
</div>
</body>
